{
    "scripts": {
        "pbr-vert": "glslc -fshader-stage=vert assets/shaders/pbr_model/PbrModel.vert.hlsl  -o assets/shaders/pbr_model/PbrModel.vert.spv",
        "pbr-frag": "glslc -fshader-stage=frag assets/shaders/pbr_model/PbrModel.frag.hlsl  -o assets/shaders/pbr_model/PbrModel.frag.spv",

        "pbr-with-shadow-vert": "glslc -fshader-stage=vert assets/shaders/pbr_with_shadow/PbrWithShadow.vert.hlsl  -o assets/shaders/pbr_with_shadow/PbrWithShadow.vert.spv",
        "pbr-with-shadow-frag": "glslc -fshader-stage=frag assets/shaders/pbr_with_shadow/PbrWithShadow.frag.hlsl  -o assets/shaders/pbr_with_shadow/PbrWithShadow.frag.spv",
        "offscreen-shadow-vert": "glslc -fshader-stage=vert assets/shaders/pbr_with_shadow/OffscreenShadow.vert.hlsl  -o assets/shaders/pbr_with_shadow/OffscreenShadow.vert.spv",
        "offscreen-shadow-geom": "glslc -fshader-stage=geom assets/shaders/pbr_with_shadow/OffscreenShadow.geom.hlsl  -o assets/shaders/pbr_with_shadow/OffscreenShadow.geom.spv",
        "offscreen-shadow-frag": "glslc -fshader-stage=frag assets/shaders/pbr_with_shadow/OffscreenShadow.frag.hlsl  -o assets/shaders/pbr_with_shadow/OffscreenShadow.frag.spv",
        
        "pbr-with-shadow-vert-v2": "glslc -fshader-stage=vert assets/shaders/pbr_with_shadow_v2/PbrWithShadow.vert.hlsl  -o assets/shaders/pbr_with_shadow_v2/PbrWithShadow.vert.spv",
        "pbr-with-shadow-frag-v2": "glslc -fshader-stage=frag assets/shaders/pbr_with_shadow_v2/PbrWithShadow.frag.hlsl  -o assets/shaders/pbr_with_shadow_v2/PbrWithShadow.frag.spv",
        "offscreen-shadow-vert-v2": "glslc -fshader-stage=vert assets/shaders/pbr_with_shadow_v2/OffscreenShadow.vert.hlsl  -o assets/shaders/pbr_with_shadow_v2/OffscreenShadow.vert.spv",
        "offscreen-shadow-frag-v2": "glslc -fshader-stage=frag assets/shaders/pbr_with_shadow_v2/OffscreenShadow.frag.hlsl  -o assets/shaders/pbr_with_shadow_v2/OffscreenShadow.frag.spv",
        "depth-pre-pass-vert": "glslc -fshader-stage=vert assets/shaders/pbr_with_shadow_v2/DepthPrePass.vert.hlsl  -o assets/shaders/pbr_with_shadow_v2/DepthPrePass.vert.spv",
        "depth-pre-pass-frag": "glslc -fshader-stage=frag assets/shaders/pbr_with_shadow_v2/DepthPrePass.frag.hlsl  -o assets/shaders/pbr_with_shadow_v2/DepthPrePass.frag.spv",
        
        "point-light-vert": "glslc -fshader-stage=vert assets/shaders/debug_renderer/DebugRenderer.vert.hlsl  -o assets/shaders/debug_renderer/DebugRenderer.vert.spv",
        "point-light-frag": "glslc -fshader-stage=frag assets/shaders/debug_renderer/DebugRenderer.frag.hlsl  -o assets/shaders/debug_renderer/DebugRenderer.frag.spv",


        "cmake-mac": "cd build64 && cmake .. -G Xcode -DCMAKE_TOOLCHAIN_FILE=./ios.toolchain.cmake -DPLATFORM=MAC && cd ..",
        "cmake-ios": "cd buildIOS && cmake .. -G Xcode -DCMAKE_TOOLCHAIN_FILE=./ios.toolchain.cmake -DPLATFORM=OS64COMBINED && cd ..",
        "cmake-windows": "cd build64 && cmake .. || cd .."
    }
}